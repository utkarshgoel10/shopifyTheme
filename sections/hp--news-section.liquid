<div class="hp--news_section">
  <div class="page-width">
    <h2 class="section_title">{{ section.settings.section_title }}</h2>
  
    <div class="news_block">
      {% for block in section.blocks %}
        <div class="news_container">
          <a href="{{ block.settings.category_link }}">
            <img src="{{ block.settings.image | img_url: '100x100' }}" alt="news" loading="lazy" />
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Homepage News",
  "settings": [
    {
      "type": "richtext",
      "id": "section_title",
      "label": "Section Title"
    }
  ],
  "blocks": [
    {
      "type": "news",
      "name": "News",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "category_link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Homepage News"
    }
  ]
}
{% endschema %}

